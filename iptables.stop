#!/bin/sh
# Flush iptables

# openwrt wan interface
INET_IFACE=eth0.2

for f in filter nat mangle; do
 iptables -t $f -F
 iptables -t $f -X
 iptables -t $f -F
done

iptables -P INPUT ACCEPT
iptables -P OUTPUT ACCEPT
iptables -P FORWARD ACCEPT

iptables -t nat -A POSTROUTING -o $INET_IFACE -j MASQUERADE
